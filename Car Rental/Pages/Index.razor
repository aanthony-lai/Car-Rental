@page "/"


<PageTitle>Car rental</PageTitle>

<Vechicles stateChanged="bookingsStateChangedHandler"/>
<Bookings stateChanged="stateChanged"/>
<Customers stateChanged="vechiclesStateChangedHandler" />


@code {
	[Inject] public BookingProcessor? bookingProcessor { get; set; }
	[Parameter] public EventCallback stateChanged { get; set; }

	void bookingsStateChangedHandler()
	{
		stateChanged.InvokeAsync();
	}
	void vechiclesStateChangedHandler()
	{
		stateChanged.InvokeAsync();
	}
}