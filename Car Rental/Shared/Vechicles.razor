<h3>Vechicles</h3>
<div class="vechicle-container">
	<table>
		<tr>
			<th>RegNo</th>
			<th>Brand</th>
			<th>Odometer</th>
			<th>Cost/Km</th>
			<th>Vechicle Type</th>
			<th>$ Day</th>
			<th>Status</th>
		</tr>
		@foreach (var car in bookingProcessor.GetVechicles())
		{
			<tr>
				<td>@car.regNumber</td>
				<td>@car.brand</td>
				<td>@car.odometer</td>
				<td>@car.costPerKm</td>
				<td>@car.vechicleType</td>
				<td>@car.costPerDay</td>
				<td><button onclick="@(() => rentCarHandler(car))" class="btn btn-success">Available</button></td>
			</tr>
		}
	</table>
</div>



@code {
	[Inject] public BookingProcessor bookingProcessor { get; set; }

	public async Task rentCarHandler(IVechicle vechicle)
	{
		await bookingProcessor.createBookings(vechicle);
	}
}
