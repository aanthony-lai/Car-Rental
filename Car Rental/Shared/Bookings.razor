<h3>Bookings</h3>
<div class="bookings-container">
	<table>
		<tr>
			<th>RegNo</th>
			<th>Customer</th>
			<th>Km Rented</th>
			<th>Km Returned</th>
			<th>Rented</th>
			<th>Returned</th>
			<th>Cost</th>
			<th>Status</th>
		</tr>
		@foreach (var booking in bookingProcessor.GetBookings())
		{
			<tr>
				<td>@booking.regNumber</td>
				<td>@booking.customer</td>
				<td>@booking.kmRented</td>
				<td>-||-</td>
				<td>@booking.rented</td>
				<td>-||-</td>
				<td></td>
				<td><button class="btn btn-success">Open</button></td>
			</tr>
		}
	</table>
</div>

@code {
	[Inject] public BookingProcessor bookingProcessor { get; set; }
}
